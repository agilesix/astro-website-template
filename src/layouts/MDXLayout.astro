---
import Layout from "@/layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "@/config/site.ts";

interface Props {
  title: string;
  description: string;
  lastUpdated?: string;
}

const { title, description, lastUpdated } = Astro.props;
---

<Layout
  title={title}
  description={description}
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="section-padding">
    <div class="container-content">
      <h1 class="text-heading-1" style="margin-bottom: var(--spacing-lg);">
        {title}
      </h1>
      {
        lastUpdated && (
          <p class="text-body-small" style="margin-bottom: var(--spacing-2xl);">
            Last updated: {lastUpdated}
          </p>
        )
      }
      <div class="prose prose-lg max-w-none">
        <slot />
      </div>
    </div>
  </section>
</Layout>
