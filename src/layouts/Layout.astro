---
import "@/styles/global.css";
import Navigation from "@/components/layout/Navigation.astro";
import Footer from "@/components/layout/Footer.astro";
import type {
  NavItem,
  NavDropdown,
  FooterLink,
  FooterColumn,
} from "@/config/site.ts";

interface LayoutProps {
  title: string;
  description: string;
  logo?: string;
  logoHref?: string;
  navItems?: (NavItem | NavDropdown)[];
  footerColumns?: FooterColumn[];
  socialLinks?: FooterLink[];
  companyName?: string;
}

const {
  title,
  description,
  logo = "Company Name",
  logoHref = "/",
  navItems = [
    { label: "Home", href: "/" },
    { label: "About", href: "/about" },
    { label: "Contact", href: "/contact" },
  ],
  footerColumns = [
    {
      title: "Company",
      links: [
        { label: "About Us", href: "/about" },
        { label: "Contact", href: "/contact" },
      ],
    },
  ],
  socialLinks = [],
  companyName = "Company Name",
} = Astro.props;
---

<html lang="en" data-theme="innovative">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&family=Roboto+Flex:opsz,wght@8..144,400;8..144,500;8..144,600;8..144,700&family=Merriweather:wght@300;400;700;900&family=Public+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <meta name="description" content={description} />
    {/* Prevent FOUC by initializing theme immediately - blocking script */}
    <script is:inline>
      (function () {
        const THEME_STORAGE_KEY = "theme-preference";
        const THEME_ATTRIBUTE = "data-theme";
        const THEMES = ["trustworthy", "playful", "innovative"];

        function getThemePreference() {
          try {
            const stored = localStorage.getItem(THEME_STORAGE_KEY);
            if (stored && THEMES.includes(stored)) {
              return stored;
            }
          } catch (e) {}
          return "innovative";
        }

        function applyTheme(theme) {
          document.documentElement.setAttribute(THEME_ATTRIBUTE, theme);
        }

        // Apply theme immediately before page renders
        const theme = getThemePreference();
        applyTheme(theme);

        // Store theme name in window for immediate access by Navigation component
        window.__INITIAL_THEME__ = theme;
        window.__INITIAL_THEME_NAME__ =
          theme.charAt(0).toUpperCase() + theme.slice(1);
      })();
    </script>
  </head>
  <body>
    <Navigation logo={logo} logoHref={logoHref} items={navItems} />
    <slot />
    <Footer
      companyName={companyName}
      columns={footerColumns}
      socialLinks={socialLinks}
    />
  </body>
</html>
