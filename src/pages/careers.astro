---
import Layout from "../layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "../config/site.ts";
---

<Layout
  title="Careers"
  description="Join our team and help transform government through technology"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Careers</h1>
      <p class="text-xl text-gray-600 mb-8">
        Join our mission to make government services more accessible,
        user-friendly, and effective for all citizens.
      </p>
      <div class="bg-gray-50 p-8 rounded-lg">
        <p class="text-lg text-gray-600 mb-4">
          We're always looking for talented individuals who share our passion
          for civic technology. Open positions will be listed here.
        </p>
        <p class="text-lg text-gray-600">
          If you're interested in joining our team, please send your resume and
          cover letter to{" "}
          <a
            href="mailto:careers@company.com"
            class="text-blue-600 hover:text-blue-800"
          >
            careers@company.com
          </a>
          .
        </p>
      </div>
    </div>
  </section>
</Layout>
