---
import Layout from "../layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "../config/site.ts";
---

<Layout
  title="Blog"
  description="Insights, updates, and news about civic technology"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Blog</h1>
      <p class="text-xl text-gray-600 mb-8">
        Stay updated with the latest insights, news, and updates from the world
        of civic technology.
      </p>
      <div class="bg-gray-50 p-8 rounded-lg">
        <p class="text-lg text-gray-600">
          Blog posts coming soon. Check back later for articles about civic
          tech, government digital transformation, and best practices.
        </p>
      </div>
    </div>
  </section>
</Layout>
