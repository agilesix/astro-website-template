---
import Layout from "../layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "../config/site.ts";
---

<Layout
  title="Our Team"
  description="Meet the team behind our civic tech solutions"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Our Team
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        We're a team of passionate technologists, designers, and researchers
        dedicated to improving government services.
      </p>
      <div class="bg-gray-50 p-8 rounded-lg">
        <p class="text-lg text-gray-600">
          Team information coming soon. Check back later to learn more about our
          team members and their expertise.
        </p>
      </div>
    </div>
  </section>
</Layout>
