---
import Layout from "../layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "../config/site.ts";
---

<Layout
  title="Accessibility"
  description="Our commitment to digital accessibility"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Accessibility
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        We are committed to ensuring digital accessibility for people with
        disabilities and providing an inclusive experience for all users.
      </p>

      <div class="prose prose-lg max-w-none">
        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">
          Our Commitment
        </h2>
        <p class="text-lg text-gray-600 mb-6">
          We strive to make our website accessible to everyone, regardless of
          ability. We follow the Web Content Accessibility Guidelines (WCAG) 2.1
          Level AA standards and Section 508 requirements.
        </p>

        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">
          Accessibility Features
        </h2>
        <ul class="list-disc list-inside text-lg text-gray-600 space-y-2 mb-6">
          <li>Keyboard navigation support</li>
          <li>Screen reader compatibility</li>
          <li>Alternative text for images</li>
          <li>Proper heading structure</li>
          <li>High contrast color schemes</li>
          <li>Resizable text</li>
        </ul>

        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">Feedback</h2>
        <p class="text-lg text-gray-600 mb-6">
          We are always working to improve the accessibility of our website. If
          you encounter any accessibility barriers, please contact us at{" "}
          <a
            href="mailto:accessibility@company.com"
            class="text-blue-600 hover:text-blue-800"
          >
            accessibility@company.com
          </a>
          .
        </p>
      </div>
    </div>
  </section>
</Layout>
