---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "@/config/site.ts";

const allNews = await getCollection("news" as any);
// Sort: featured first, then by publish date (newest first)
const sortedNews = allNews.sort((a: any, b: any) => {
  // Featured news first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  // Then by date (newest first)
  return (
    new Date(b.data.publishDate).getTime() -
    new Date(a.data.publishDate).getTime()
  );
});

const featuredNews = sortedNews.filter((news: any) => news.data.featured);
const regularNews = sortedNews.filter((news: any) => !news.data.featured);
---

<Layout
  title="News"
  description="Latest news and announcements from our team"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="section-padding">
    <div class="container-content">
      <h1 class="text-heading-1" style="margin-bottom: var(--spacing-md);">
        News
      </h1>
      <p class="text-body-large" style="margin-bottom: var(--spacing-2xl);">
        Stay updated with the latest news and announcements from our team.
      </p>

      {
        featuredNews.length > 0 && (
          <div style="margin-bottom: var(--spacing-3xl);">
            <h2
              class="text-heading-2"
              style="margin-bottom: var(--spacing-lg);"
            >
              Featured News
            </h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: var(--spacing-xl);">
              {featuredNews.map((newsItem: any) => (
                <article
                  class="card"
                  style="display: flex; flex-direction: column;"
                >
                  <h3
                    class="text-heading-3"
                    style="margin-bottom: var(--spacing-sm);"
                  >
                    <a
                      href={`/news/${newsItem.slug}`}
                      style="text-decoration: none; color: inherit;"
                    >
                      {newsItem.data.title}
                    </a>
                  </h3>
                  <p
                    class="text-body-small"
                    style="margin-bottom: var(--spacing-sm); color: var(--color-text-secondary);"
                  >
                    {newsItem.data.publishDate}
                    {newsItem.data.author && ` • ${newsItem.data.author}`}
                  </p>
                  <p
                    class="text-body"
                    style="margin-bottom: var(--spacing-md); flex-grow: 1;"
                  >
                    {newsItem.data.description}
                  </p>
                  <a
                    href={`/news/${newsItem.slug}`}
                    class="button-primary inline-block"
                    style="align-self: flex-start;"
                  >
                    Read More
                  </a>
                </article>
              ))}
            </div>
          </div>
        )
      }

      {
        regularNews.length > 0 && (
          <div>
            {featuredNews.length > 0 && (
              <h2
                class="text-heading-2"
                style="margin-bottom: var(--spacing-lg);"
              >
                All News
              </h2>
            )}
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: var(--spacing-xl);">
              {regularNews.map((newsItem: any) => (
                <article
                  class="card"
                  style="display: flex; flex-direction: column;"
                >
                  <h3
                    class="text-heading-3"
                    style="margin-bottom: var(--spacing-sm);"
                  >
                    <a
                      href={`/news/${newsItem.slug}`}
                      style="text-decoration: none; color: inherit;"
                    >
                      {newsItem.data.title}
                    </a>
                  </h3>
                  <p
                    class="text-body-small"
                    style="margin-bottom: var(--spacing-sm); color: var(--color-text-secondary);"
                  >
                    {newsItem.data.publishDate}
                    {newsItem.data.author && ` • ${newsItem.data.author}`}
                  </p>
                  <p
                    class="text-body"
                    style="margin-bottom: var(--spacing-md); flex-grow: 1;"
                  >
                    {newsItem.data.description}
                  </p>
                  <a
                    href={`/news/${newsItem.slug}`}
                    class="button-primary inline-block"
                    style="align-self: flex-start;"
                  >
                    Read More
                  </a>
                </article>
              ))}
            </div>
          </div>
        )
      }

      {
        sortedNews.length === 0 && (
          <div class="card">
            <p class="text-body-large">
              News items coming soon. Check back later for updates and
              announcements.
            </p>
          </div>
        )
      }
    </div>
  </section>
</Layout>
