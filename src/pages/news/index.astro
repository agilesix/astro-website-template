---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import PostCollection from "@/components/ui/PostCollection.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "@/config/site.ts";

const allNews = await getCollection("news" as any);
// Sort: featured first, then by publish date (newest first)
const sortedNews = allNews.sort((a: any, b: any) => {
  // Featured news first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  // Then by date (newest first)
  return (
    new Date(b.data.publishDate).getTime() -
    new Date(a.data.publishDate).getTime()
  );
});

const featuredNews = sortedNews.filter((news: any) => news.data.featured);
const regularNews = sortedNews.filter((news: any) => !news.data.featured);
---

<Layout
  title="News"
  description="Latest news and announcements from our team"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="section-padding">
    <div class="container-content">
      <h1 class="text-heading-1" style="margin-bottom: var(--spacing-md);">
        News
      </h1>
      <p class="text-body-large" style="margin-bottom: var(--spacing-2xl);">
        Stay updated with the latest news and announcements from our team.
      </p>

      <PostCollection
        featured={featuredNews}
        regular={regularNews}
        basePath="/news"
        featuredTitle="Featured News"
        regularTitle="All News"
        buttonText="Read More"
        emptyMessage="News items coming soon. Check back later for updates and announcements."
      />
    </div>
  </section>
</Layout>
