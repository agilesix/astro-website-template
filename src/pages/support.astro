---
import Layout from "../layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "../config/site.ts";
---

<Layout
  title="Support"
  description="Get help and support for our services"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Support</h1>
      <p class="text-xl text-gray-600 mb-8">
        Need help? We're here to assist you with any questions or issues.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-gray-50 p-6 rounded-lg">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">
            Email Support
          </h2>
          <p class="text-gray-600 mb-4">
            Send us an email and we'll get back to you as soon as possible.
          </p>
          <a
            href="mailto:support@company.com"
            class="text-blue-600 hover:text-blue-800 font-medium"
          >
            support@company.com
          </a>
        </div>

        <div class="bg-gray-50 p-6 rounded-lg">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">
            Documentation
          </h2>
          <p class="text-gray-600 mb-4">
            Check our documentation for answers to common questions.
          </p>
          <a href="/docs" class="text-blue-600 hover:text-blue-800 font-medium">
            View Documentation â†’
          </a>
        </div>
      </div>

      <div class="bg-gray-50 p-8 rounded-lg">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
          Frequently Asked Questions
        </h2>
        <p class="text-lg text-gray-600">
          FAQ content coming soon. Check back later for answers to common
          questions.
        </p>
      </div>
    </div>
  </section>
</Layout>
