---
import Layout from "../../layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "../../config/site.ts";
---

<Layout
  title="Data Analytics"
  description="Transform government data into actionable insights for better decision-making"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Data Analytics
      </h1>
      <div class="prose prose-lg max-w-none">
        <p class="text-xl text-gray-600 mb-6">
          Transform government data into actionable insights for better
          decision-making.
        </p>
        <p class="text-lg text-gray-600 mb-6">
          We help government agencies unlock the value of their data through
          comprehensive analytics, visualization, and reporting solutions that
          drive evidence-based policy decisions.
        </p>
        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">
          Our Services
        </h2>
        <ul class="list-disc list-inside text-lg text-gray-600 space-y-2 mb-6">
          <li>Data warehouse design and implementation</li>
          <li>Business intelligence and reporting dashboards</li>
          <li>Predictive analytics and modeling</li>
          <li>Data visualization and storytelling</li>
          <li>Performance metrics and KPI tracking</li>
        </ul>
        <h2 class="text-2xl font-semibold text-gray-900 mt-8 mb-4">Benefits</h2>
        <p class="text-lg text-gray-600 mb-6">
          Our data analytics solutions help agencies make informed decisions,
          identify trends and patterns, optimize resource allocation, and
          demonstrate program effectiveness to stakeholders and citizens.
        </p>
        <div class="mt-8">
          <a
            href="/contact"
            class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors"
          >
            Get Started
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
