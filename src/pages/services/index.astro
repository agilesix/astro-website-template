---
import Layout from "../../layouts/Layout.astro";
import Services from "../../components/Services.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "../../config/site.ts";

const services = {
  title: "Our Services",
  subtitle:
    "We deliver comprehensive civic tech solutions to help governments serve their communities better.",
  services: [
    {
      title: "Digital Transformation",
      description:
        "Modernize legacy systems and workflows to improve efficiency and citizen experience.",
    },
    {
      title: "User-Centered Design",
      description:
        "Research-driven design processes that put citizens at the heart of every solution.",
    },
    {
      title: "Data Analytics",
      description:
        "Transform government data into actionable insights for better decision-making.",
    },
    {
      title: "Accessibility & Compliance",
      description:
        "Ensure your digital services meet Section 508 and WCAG standards for all users.",
    },
    {
      title: "Agile Development",
      description:
        "Iterative development approaches that deliver value quickly and continuously.",
    },
    {
      title: "Training & Support",
      description:
        "Comprehensive training programs to help your team succeed with new technologies.",
    },
  ],
};
---

<Layout
  title="Services"
  description="Comprehensive civic tech solutions for modern government"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="py-20 px-4">
    <div class="max-w-4xl mx-auto text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Our Services
      </h1>
      <p class="text-xl text-gray-600">
        We offer a comprehensive range of services to help government agencies
        modernize their digital infrastructure and improve citizen experience.
      </p>
    </div>
  </section>

  <Services
    title={services.title}
    subtitle={services.subtitle}
    services={services.services}
  />
</Layout>
