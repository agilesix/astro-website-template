---
import Layout from "@/layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "@/config/site.ts";
---

<Layout
  title="Contact Us"
  description="Get in touch with our team to discuss your civic tech needs"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="section-padding bg-background">
    <div class="container-content">
      <h1 class="text-heading-1 mb-6">Contact Us</h1>
      <p class="text-body-large mb-8">
        We'd love to hear from you. Get in touch to discuss how we can help
        transform your government services.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <div class="card">
          <h2 class="text-heading-3 mb-4">Email</h2>
          <p class="text-body">
            <a
              href="mailto:contact@company.com"
              class="text-primary hover:text-primary/80 transition-colors"
            >
              contact@company.com
            </a>
          </p>
        </div>

        <div class="card">
          <h2 class="text-heading-3 mb-4">Phone</h2>
          <p class="text-body">
            <a
              href="tel:+1234567890"
              class="text-primary hover:text-primary/80 transition-colors"
            >
              (123) 456-7890
            </a>
          </p>
        </div>
      </div>

      <div
        class="bg-card text-card-foreground border border-border rounded-lg p-8"
      >
        <h2 class="text-heading-2 mb-6">Send us a message</h2>
        <form class="space-y-6">
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-foreground mb-2"
            >
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-2 bg-background text-foreground border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-ring transition-colors"
              required
            />
          </div>
          <div>
            <label
              for="email"
              class="block text-sm font-medium text-foreground mb-2"
            >
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-2 bg-background text-foreground border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-ring transition-colors"
              required
            />
          </div>
          <div>
            <label
              for="message"
              class="block text-sm font-medium text-foreground mb-2"
            >
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="6"
              class="w-full px-4 py-2 bg-background text-foreground border border-input rounded-lg focus:ring-2 focus:ring-ring focus:border-ring transition-colors"
              required></textarea>
          </div>
          <button type="submit" class="button-primary"> Send Message </button>
        </form>
      </div>
    </div>
  </section>
</Layout>
