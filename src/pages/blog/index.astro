---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import {
  navItems,
  footerColumns,
  socialLinks,
  siteConfig,
} from "@/config/site.ts";

const allPosts = await getCollection("blog" as any);
// Sort: featured first, then by publish date (newest first)
const sortedPosts = allPosts.sort((a: any, b: any) => {
  // Featured posts first
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  // Then by date (newest first)
  return (
    new Date(b.data.publishDate).getTime() -
    new Date(a.data.publishDate).getTime()
  );
});

const featuredPosts = sortedPosts.filter((post: any) => post.data.featured);
const regularPosts = sortedPosts.filter((post: any) => !post.data.featured);
---

<Layout
  title="Blog"
  description="Insights, updates, and news about civic technology"
  logo={siteConfig.logo}
  logoHref={siteConfig.logoHref}
  navItems={navItems}
  footerColumns={footerColumns}
  socialLinks={socialLinks}
  companyName={siteConfig.companyName}
>
  <section class="section-padding">
    <div class="container-content">
      <h1 class="text-heading-1" style="margin-bottom: var(--spacing-md);">
        Blog
      </h1>
      <p class="text-body-large" style="margin-bottom: var(--spacing-2xl);">
        Stay updated with the latest insights, news, and updates from the world
        of civic technology.
      </p>

      {
        featuredPosts.length > 0 && (
          <div style="margin-bottom: var(--spacing-3xl);">
            <h2
              class="text-heading-2"
              style="margin-bottom: var(--spacing-lg);"
            >
              Featured Posts
            </h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: var(--spacing-xl);">
              {featuredPosts.map((post: any) => (
                <article
                  class="card"
                  style="display: flex; flex-direction: column;"
                >
                  <h3
                    class="text-heading-3"
                    style="margin-bottom: var(--spacing-sm);"
                  >
                    <a
                      href={`/blog/${post.slug}`}
                      style="text-decoration: none; color: inherit;"
                    >
                      {post.data.title}
                    </a>
                  </h3>
                  <p
                    class="text-body-small"
                    style="margin-bottom: var(--spacing-sm); color: var(--color-text-secondary);"
                  >
                    {post.data.publishDate}
                    {post.data.author && ` • ${post.data.author}`}
                  </p>
                  <p
                    class="text-body"
                    style="margin-bottom: var(--spacing-md); flex-grow: 1;"
                  >
                    {post.data.description}
                  </p>
                  <a
                    href={`/blog/${post.slug}`}
                    class="button-primary inline-block"
                    style="align-self: flex-start;"
                  >
                    Read More
                  </a>
                </article>
              ))}
            </div>
          </div>
        )
      }

      {
        regularPosts.length > 0 && (
          <div>
            {featuredPosts.length > 0 && (
              <h2
                class="text-heading-2"
                style="margin-bottom: var(--spacing-lg);"
              >
                All Posts
              </h2>
            )}
            <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: var(--spacing-xl);">
              {regularPosts.map((post: any) => (
                <article
                  class="card"
                  style="display: flex; flex-direction: column;"
                >
                  <h3
                    class="text-heading-3"
                    style="margin-bottom: var(--spacing-sm);"
                  >
                    <a
                      href={`/blog/${post.slug}`}
                      style="text-decoration: none; color: inherit;"
                    >
                      {post.data.title}
                    </a>
                  </h3>
                  <p
                    class="text-body-small"
                    style="margin-bottom: var(--spacing-sm); color: var(--color-text-secondary);"
                  >
                    {post.data.publishDate}
                    {post.data.author && ` • ${post.data.author}`}
                  </p>
                  <p
                    class="text-body"
                    style="margin-bottom: var(--spacing-md); flex-grow: 1;"
                  >
                    {post.data.description}
                  </p>
                  <a
                    href={`/blog/${post.slug}`}
                    class="button-primary inline-block"
                    style="align-self: flex-start;"
                  >
                    Read More
                  </a>
                </article>
              ))}
            </div>
          </div>
        )
      }

      {
        sortedPosts.length === 0 && (
          <div class="card">
            <p class="text-body-large">
              Blog posts coming soon. Check back later for articles about civic
              tech, government digital transformation, and best practices.
            </p>
          </div>
        )
      }
    </div>
  </section>
</Layout>
