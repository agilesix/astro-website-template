---
interface Props {
  href: string;
  text: string;
  class?: string;
}

const { href, text, class: className = "" } = Astro.props;
---

<a
  href={href}
  class={`inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors ${className}`}
>
  {text}
</a>
