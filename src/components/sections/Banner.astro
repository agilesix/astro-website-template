---
interface BannerProps {
  tagline: string;
  description: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaHref?: string;
}

const { tagline, description, backgroundImage, ctaText, ctaHref } = Astro.props;
---

<section
  class="section-padding bg-primary text-primary-foreground"
  style="background: linear-gradient(to right, var(--primary), var(--color-primary-dark));"
>
  <div class="container-content text-center">
    <h1
      class="text-heading-1"
      style="color: var(--primary-foreground); margin-bottom: var(--spacing-lg);"
    >
      {tagline}
    </h1>
    <p
      class="text-body-large"
      style="color: var(--primary-foreground); opacity: 0.9; margin-bottom: var(--spacing-2xl);"
    >
      {description}
    </p>
    {
      ctaText && ctaHref && (
        <a
          href={ctaHref}
          class="inline-block bg-primary-foreground text-primary px-8 py-3 rounded-lg font-semibold transition-colors hover:bg-primary-foreground/90"
        >
          {ctaText}
        </a>
      )
    }
  </div>
</section>
