---
interface BannerProps {
  tagline: string;
  description: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaHref?: string;
}

const { tagline, description, backgroundImage, ctaText, ctaHref } = Astro.props;
---

<section class="bg-linear-to-r from-blue-500 to-blue-800 text-white py-20 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-4xl md:text-5xl font-bold mb-6">
      {tagline}
    </h1>
    <p class="text-xl md:text-2xl text-blue-100 mb-8">
      {description}
    </p>
    {
      ctaText && ctaHref && (
        <a
          href={ctaHref}
          class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors"
        >
          {ctaText}
        </a>
      )
    }
  </div>
</section>
